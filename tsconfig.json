{
  "compilerOptions": {
    "target": "es2018",                                  
    "lib": ["es2018", "esnext.asynciterable"],                                      
    "module": "commonjs",                                
    "rootDir": "src",                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                                                
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
